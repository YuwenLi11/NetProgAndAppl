#include <sys/types.h>
#include <sys/stat.h>
#include <unistd.h>
#include <fcntl.h>
#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <errno.h>
#include <assert.h>

static off_t file_size(const char* fname);

char* content = NULL;

char** get_file_3_svc(const char* fname){

    if(content != NULL){
        free(content);
        content = NULL;
    }

    // open file
    FILE *fp = fopen(fname,"rb");
    if (fp==NULL) {
   	 printf("There is no file named: %s\n", fname);
   	 return &content;
    }
    printf("Reading the file: %s\n", fname);
    off_t fsz = file_size(fname);
    content = (char*)malloc(fsz);
 
    
    int nread = fread(content,1,fsz,fp);

    if(nread < 0){
        printf("read failed");
        free(content);
        exit(-1);
    }
    printf("file tranfered\n");

 
    // return a pointer to the space
    return &content;
  }

static off_t file_size(const char* fname){
    struct stat st;

    if(stat(fname, &st) == 0)
        return st.st_size;

    return -1;
}


